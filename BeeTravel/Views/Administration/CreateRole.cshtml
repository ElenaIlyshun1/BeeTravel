@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = " - Create Role";

}

@model CreateRoleViewModel

<div class="section__content section__content--p30">
    <div class="container-fluid" style="text-align:center;">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">Create Role</div>
                    <div class="card-body card-block">
                        <form asp-action="CreateRole" method="post" class="mt-3">
                            <div asp-validation-summary="All" class="text-danger">
                            </div>
                            <div class="form-group row" style="align-items:center;">
                                <div class="col-sm-1">
                                    <input asp-for="RoleColor" type="color" id="rolecolor" name="rolecolor"
                                           value="#00b5e9" style="width: 23px;">
                                </div>
                                <div class="col-sm-11">
                                    <input asp-for="RoleName" class="form-control" placeholder="Role name...">
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button class="au-btn au-btn-icon au-btn--red au-btn--small">
                                    <i class="fas fa-undo"></i>
                                    <a style="color:white;" asp-action="RoleIndex"> Cancel</a>
                                </button>
                                <button type="submit" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="fas fa-plus"></i>
                                    <a style="color:white;">Create Role</a>
                                </button>
                                <button class="au-btn au-btn-icon au-btn--blue au-btn--small">
                                    <i class="fas fa-list-alt"></i>
                                    <a style="color:white;" asp-action="Index"> User List</a>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
