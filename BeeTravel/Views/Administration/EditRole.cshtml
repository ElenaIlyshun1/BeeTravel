@model EditRoleViewModel

@{
    ViewBag.Title = " - Edit Role";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="section__content section__content--p30">
    <div class="container-fluid" style="text-align:center;">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">Edit Role</div>
                    <div class="card-body card-block">
                        <form method="post">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-shield-alt"></i>
                                    </div>
                                    <input asp-for="Id" type="text" id="firstname" placeholder="First Name" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-id-card"></i>
                                    </div>
                                    <input asp-for="RoleName" type="text" id="lastname" placeholder="RoleName" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group" style="align-items:center;">
                                    <div class="input-group-addon">
                                        <i class="fa fa-magic"></i>
                                    </div>
                                    <input asp-for="RoleColor" type="color" id="color" placeholder="Color">
                                </div>
                            </div>
                            <div class="form-actions form-group">
                                <button type="submit" class="btn btn-success btn-sm">Update</button>
                                <button asp-action="RoleIndex" class="btn btn-danger btn-sm">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>