@model IEnumerable<BeeTravel.Entities.DbRole>
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = " - Role List";
}
<div class="section__content section__content--p30">
    <div class="container-fluid" style="text-align:center;">
        <h2>Список ролей</h2>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr class="tr-shadow">
                            <td>
                                <span class="role admin" style="background-color:@role.RoleColor">@role.Name</span>
                            </td>
                            <td>
                                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                                    <div class="table-data-feature">         
                                        <a class="item" data-toggle="tooltip" data-placement="top" title="Edit" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                        <button type="submit" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button> 
                                    </div>
                                </form>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                <i class="fas fa-shield-alt"></i>
                <a style="color:white;" asp-action="CreateRole">Add Role</a>
            </button>
            <button class="au-btn au-btn-icon au-btn--blue au-btn--small">
                <i class="fas fa-list-alt"></i>
                <a style="color:white;" asp-action="Index"> User List</a>
            </button>
        </div>
    </div>
</div>
