@model IndexViewModel
<section id="banner-lr">
    <div class="content content-profile">
        <div class="container" >
            <div class="Profile_page_title" style="text-align:center;">
                <h3>PROFILE</h3>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="text-center">
                        <hr>
                        <img src="./img/default_user.png" class="avatar img-circle img-thumbnail" alt="avatar">
                        <hr  class="line-under-profile-pic">
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">
                            <hr>
                            <form method="post">
                                <div class="form-group">
                                    <div class="col-xs-6">
                                        <label for="first_name"><h3>First name</h3></label>
                                        <input asp-for="Username">

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-xs-6">
                                        <label for="last_name"><h3>Last name</h3></label>
                                        <input asp-for="Username">
                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-xs-6">
                                        <label for="phone"><h3>Phone</h3></label>
                                        <input asp-for="PhoneNumber" type="tel" style="transition: border-color 0.2s ease-in-out; background: transparent; border-radius: 4px; border: solid 1px rgba(255, 255, 255, 0.3); color: inherit; display: block; outline: 0; padding: 0 1em; text-decoration: none; width: 100%; width: 100%; padding: 12px; background: transparent; ">
                                    </div>
                                </div>


                                <div class="form-group">

                                    <div class="col-xs-6">
                                        @if (Model.IsEmailConfirmed)
                                        {
                                            <label for="email"><h3>Email</h3></label>
                                            <input asp-for="Email">
                                        }
                                        else
                                        {
                                            <label for="email"><h3>Email</h3></label>
                                            <input asp-for="Email">
                                            <div style="text-align:center;">
                                                <button asp-action="SendVerificationEmail" class="btn button" style="margin-top:2em;">Send verification email</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="form-group form-lr" style="text-align:center;">
                                    <button class="btn button" type="submit"> Save</button>
                                </div>
                            </form>
                            <hr>
                            <div class="form-group form-lr">
                                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="button special"> Выйти </button>
                                </form>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
