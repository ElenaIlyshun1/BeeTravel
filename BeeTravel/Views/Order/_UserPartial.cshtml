@model BeeTravel.Entities.DbUser
    <div class="col-6">
        <div>

            <div class="stats">
                <h2>User Data</h2>
                <div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <hr>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label class="profile-label" for="first_name"><h3>First name</h3></label>
                                    <input asp-for="Firstname" value="@Model.Firstname" style="transition: border-color 0.2s ease-in-out; background: transparent; border-radius: 4px; border: solid 1px rgba(255, 255, 255, 0.3); color: inherit; display: block; outline: 0; padding: 0 1em; text-decoration: none; width: 100%; width: 100%; padding: 12px; background: transparent; ">

                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label class="profile-label" for="last_name"><h3>Last name</h3></label>
                                    <input asp-for="Lastname" value="@Model.Lastname" style="transition: border-color 0.2s ease-in-out; background: transparent; border-radius: 4px; border: solid 1px rgba(255, 255, 255, 0.3); color: inherit; display: block; outline: 0; padding: 0 1em; text-decoration: none; width: 100%; width: 100%; padding: 12px; background: transparent; ">
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label class="profile-label" for="phone"><h3>Phone</h3></label>
                                    <input asp-for="PhoneNumber" value="@Model.PhoneNumber" type="tel" style="transition: border-color 0.2s ease-in-out; background: transparent; border-radius: 4px; border: solid 1px rgba(255, 255, 255, 0.3); color: inherit; display: block; outline: 0; padding: 0 1em; text-decoration: none; width: 100%; width: 100%; padding: 12px; background: transparent; ">
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="profile-label" for="phone"><h3>Email</h3></label>
                                <input asp-for="Email" value="@Model.Email" style="transition: border-color 0.2s ease-in-out; background: transparent; border-radius: 4px; border: solid 1px rgba(255, 255, 255, 0.3); color: inherit; display: block; outline: 0; padding: 0 1em; text-decoration: none; width: 100%; width: 100%; padding: 12px; background: transparent; ">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>